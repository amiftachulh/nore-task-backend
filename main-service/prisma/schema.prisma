// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model client {
  id         String    @id @default(uuid())
  nama       String    @db.VarChar(60)
  perusahaan String?
  alamat     String?
  nomor_hp   String    @db.VarChar(15)
  project    project[]
}

model project {
  id            String  @id @default(uuid())
  nama          String
  client        client? @relation(fields: [client_id], references: [id], onUpdate: Cascade, onDelete: SetNull)
  client_id     String?
  jenis_layanan String
  keterangan    String? @db.TinyText
}
